/**app.wxss**/
html,page{
   background:rgba(245,247,247,1); 
}


/*字体粗细程度  */
text.font-lighter{
  font-weight: 300;
}
text.font-medium{
  font-weight: 700;
}

text.font-normal-black-32,input.font-normal-black-32,textarea.font-normal-black-32{
  font-size:32rpx;
  color:rgba(51,51,51,1); 
}

text.font-normal-gray-32,input.font-normal-gray-32,textarea.font-normal-gray-32{
  font-size:32rpx;
  color:rgba(166,166,166,1);
}

text.font-normal-gray-24{
  font-size:24rpx;
  color:rgba(166,166,166,1);
}

/*点  */
.point{
  border-radius: 50%;
  background:rgba(99,173,247,1);
  width: 12rpx;
  height: 12rpx;
}


/*阿牛  */
/*常用button样式  */
button.my-button{
 
  background: linear-gradient(#45BFF7, #30B0F0);
  color:rgba(255,255,255,1);
  
  line-height: 44rpx;
  padding:22rpx 0rpx;
  border: none;
  
}

button.my-button:active{
  background: linear-gradient(rgb(61, 171, 221), rgb(43, 158, 215));
  color:rgba(255,255,255,0.6);
}

button.my-button[disabled='']{
  background:rgba(174,225,248,1);
  color:rgba(255,255,255,0.6);
  box-shadow: 0 0rpx 0rpx;
}

button.main-button{
  width: 338rpx;
  font-size:32rpx;
  border-radius: 44rpx;
  box-shadow: 0 10rpx 24rpx rgba(48,176,240,0.5);
}

button.main-button:active{
  width: 338rpx;
  font-size:32rpx;
  border-radius: 44rpx;
  box-shadow: 0 0rpx 0rpx;
}

button::after{
  border: none;
}