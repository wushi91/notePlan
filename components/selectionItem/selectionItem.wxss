/* item-wrapper  */
.item-wrapper{
  background-color: white;
  padding: 0rpx 30rpx; 
}

.item{
  padding: 26rpx 0;
  height: 45rpx;
  display: flex; 
  align-items: center;
}

.item-title{
  font-size:32rpx;
  line-height: 45rpx;
  color:rgba(166,166,166,1);
}

.item-point{
  margin-left: 20rpx;
  border-radius: 50%;
  background-color:rgba(99,173,247,1);
  width: 12rpx;
  height: 12rpx;
}

.select-color{
  color:rgba(51,51,51,1); 
}