/* pages/plan/planDetail/planDetail.wxss */

/*总布局-结构  */
.content-wrapper{
  padding:30rpx 30rpx 39rpx 30rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  line-height: 45rpx;
}
.remark-wrapper{
  margin-top: 30rpx;
  padding:26rpx 30rpx;
  background-color: white;
  height: 196rpx;
  box-sizing: border-box;
  line-height: 45rpx;
}

/*个别布局  */
.plan-type{
  display: flex;
  align-items: center;
}
.time-wrapper{
  display: flex;
  align-items: center;
}
.image-wrapper{
  flex: 1;
  display: flex;
  justify-content: center;
}


/*间隔布局  */
.plan-content{
  margin-bottom: 60rpx;
}
.time-wrapper{
  margin: 10rpx 0 0rpx 0;
}


.remind-type{
  margin-top: 60rpx;
}

.plan-type{
  margin: 60rpx 0;
}

button{
  margin-top: 83rpx;
  margin-bottom: 60rpx;
}





/*字体设置  */
.plan-content{
  font-size:44rpx;
  color:rgba(51,51,51,1);
  line-height:62rpx;
  word-break: break-all;
}
.remark{
  word-break: break-all;
}

.time{
  font-size:80rpx;
  color:rgba(51,51,51,1);
  line-height:95rpx;
}

.delete-plan{
  font-size:24rpx;
  color:rgba(247,99,104,1);
  line-height:33rpx;
  width: 100%;
  display: inline-block;
  text-align: center;
}

/*其他  */

image{
  height: 64rpx;
  width: 64rpx;
}

.point{
  margin-left: 20rpx;
}
