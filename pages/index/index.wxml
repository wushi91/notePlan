<view class="container">


 <swiper circular="true"
        duration="500">
    <swiper-item>
      <calendar></calendar>
    </swiper-item>
    <swiper-item>
      <calendar></calendar>
    </swiper-item>
    <swiper-item>
      <calendar></calendar>
    </swiper-item>
</swiper> 

<swiper circular="true"
        duration="500"
        current="2"
        bindchange="bindchange"
        bindanimationfinish="bindanimationfinish">
    <block wx:for="{{weeks}}" wx:key='index'>
      <swiper-item>
        <text>{{item.day}}</text>
      </swiper-item>
  </block>
</swiper> 

